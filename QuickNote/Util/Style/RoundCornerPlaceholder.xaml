<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customControl="clr-namespace:QuickNote.Util.CustomControl"
                    xmlns:util="clr-namespace:QuickNote.Util">
    <Style x:Key="RoundCornerPlaceholderStyle" TargetType="{x:Type customControl:PlaceholderTextBox}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="20"/>
            </Style>
        </Style.Resources>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="{x:Static util:Pallet.MainColor_4}"/>
        <Setter Property="Foreground" Value="{x:Static util:Pallet.MainColor_6}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>